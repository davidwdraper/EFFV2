{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "@eff/shared": ["../shared/dist/index"],
      "@eff/shared/*": ["../shared/dist/*"]
    },

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "rootDir": ".", // <-- include service root so index.ts is valid
    "outDir": "./dist"
  },
  "include": ["index.ts", "src/**/*"], // <-- explicitly include the root entry + src/**
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/__tests__/**"]
}
