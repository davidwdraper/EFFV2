{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": ".", // ROOT of backend
    "paths": {
      "@shared/*": ["shared/*"] // Resolves to backend/shared/*
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
