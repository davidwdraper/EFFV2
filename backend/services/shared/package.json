{
  "name": "@eff/shared",
  "private": true,

  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "scripts": {
    "clean": "rimraf dist tsconfig.tsbuildinfo || true",
    "build": "pnpm run clean && tsc -b",
    "typecheck": "tsc -b --noEmit"
  },

  "//": "No barrel: do not export '.'; only subpath exports are allowed.",
  "exports": {
    "./src/*": "./dist/*.js",
    "./package.json": "./package.json"
  },

  "typesVersions": {
    "*": {
      "src/*": ["dist/*.d.ts"]
    }
  },

  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3"
  }
}
