{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,

    "rootDir": "..", // include sibling folders under /services
    "outDir": "../dist/act", // keep output outside the source tree

    "types": ["node"] // vitest types not needed for runtime
  },
  "ts-node": { "files": true },
  "include": [
    "src",
    "index.ts",
    "scripts/**/*.ts", // loader scripts
    "scripts/types/**/*.d.ts", // <-- add this to pick up unzipper.d.ts shim
    "types/**/*.d.ts", // (keep if you also have /types shims)
    "../shared/**/*.ts"
  ]
}
