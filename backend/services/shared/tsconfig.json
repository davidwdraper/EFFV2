// /backend/services/shared/tsconfig.json
{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,

    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2020",

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/index.ts",
    "src/index.internal.ts"
  ],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/__tests__/**"]
}
