// tsconfig.json  (repo root)
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["backend/services/shared/src/*"],
      "@eff/shared": ["backend/services/shared/src/index"],
      "@eff/shared/*": ["backend/services/shared/src/*"]
    }
  }
}
