{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["index.ts", "src/**/*"]
}
