{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": ".", // <- very important
    "typeRoots": ["./shared/types", "./node_modules/@types"],
    "paths": {
      "@shared/*": ["shared/*"] // <- must match layout
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["services/**/*.ts", "shared/**/*.ts"]
}
