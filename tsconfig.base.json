{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@nv/shared": ["backend/services/shared/dist/index"],
      "@nv/shared/*": ["backend/services/shared/dist/*"]
    },

    "types": ["node"],
    "resolveJsonModule": true,
    "noEmitOnError": true
  }
}
